extends layout

block content

  div.login-container
    img#logo(src="/img/logo_black.png")

    h1.mb-5 Sign In
    form(method="post" action="/login")
      div.form-group
        h2.label E-mail Address
        input.form-control.mb-4(
          type='email'
          name='email'
          placeholder="address@example.com"
          required
        )
        h2.label Password
        input.form-control(
          type='password'
          name='password'
          placeholder="Password"
          required
        )
        unless errors==""
          div.text-center
            p.error=errors
        button.btn.btn-primary.btn-login.mt-5 Login

        .text-center.mt-5
          a(href="/login/register")
            h2 Sign Up

block scripts
